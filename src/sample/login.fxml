<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="base" maxHeight="450.0" maxWidth="800.0" minHeight="450.0" minWidth="800.0" prefHeight="450.0" prefWidth="800.0" stylesheets="@LogInStyle.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <children>
      <ImageView fx:id="one" fitHeight="450.0" fitWidth="450.0" layoutX="200.0" pickOnBounds="true" preserveRatio="true">
         <effect>
            <GaussianBlur radius="2" />
         </effect>
      </ImageView>
      <MediaView fx:id="loop" fitHeight="450.0" fitWidth="800.0">
         <effect>
            <ColorAdjust saturation="-1.0" />
         </effect>
      </MediaView>
      <TextField fx:id="userNameTextField" alignment="BOTTOM_LEFT" layoutX="262.0" layoutY="205.0" prefHeight="25.0" prefWidth="267.0" promptText="User name">
         <font>
            <Font size="14.0" />
         </font>
         <effect>
            <Glow />
         </effect>
      </TextField>
      <PasswordField fx:id="PasswordTextField" layoutX="262.0" layoutY="264.0" prefHeight="25.0" prefWidth="267.0" promptText="Password">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <Button fx:id="LoginButton" layoutX="324.0" layoutY="337.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="25.0" prefWidth="120" text="Log in" textAlignment="CENTER" />
      <Button fx:id="createButton" layoutX="666.0" layoutY="411.0" mnemonicParsing="false" onAction="#handleCreateButton" prefHeight="25.0" prefWidth="120" text="Sign Up" textAlignment="CENTER" />
      <ImageView fitHeight="139.0" fitWidth="185.0" layoutX="303.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Graphics/logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
